{
  "name": "api",
  "version": "1.0.0",
  "description": "backend for encrypted events manager",
  "main": "src/server.ts",
  "author": "@jaycammarano",
  "license": "ISC",
  "scripts": {
    "dev": "tsnd --respawn src/server.ts",
    "dev:debug": "tsnd --respawn src/server.ts",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watchAll",
    "build": "rm -rf build && prettier --write src/ && tsc && jest --coverage",
    "build:watch": "onchange 'src/**/*.ts' -- npm run build",
    "view:coverage": "serve coverage/lcov-report",
    "clean": "rm -rf coverage src/**/*.js src/**/*.map build"
  },
  "dependencies": {
    "@stablelib/base64": "^1.0.0",
    "@stablelib/utf8": "^1.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.1",
    "morgan": "~1.9.1",
    "pg": "^8.5.1",
    "tweetnacl-ts": "^1.0.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.9",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.12",
    "@types/pg": "^7.14.7",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  }
}
